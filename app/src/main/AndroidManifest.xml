<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SpeakEasy"
        tools:targetApi="36">



        <!-- Create Profile Activity (Launcher) -->
        <activity
            android:name=".ui.CreateProfileActivity"
            android:exported="true"
            android:theme="@style/Theme.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Home Activity -->
        <activity
            android:name=".ui.HomeActivity"
            android:exported="false" />



        <!-- Dashboard Activity -->
        <activity
            android:name=".ui.DashboardActivity"
            android:exported="false" />

        <!-- Recording Activity -->
        <activity
            android:name=".ui.RecordingActivity"
            android:exported="false" />

        <!-- Prompt Activity -->
        <activity
            android:name=".ui.PromptActivity"
            android:exported="false" />
        <activity
            android:name=".ui.RecordingsListActivity"
            android:exported="false" />

    </application>

</manifest>